@model FilmCity98.Models.Country

@{
    ViewData["Title"] = "Country Details";
}

<h1 class="text-center my-4">Country Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="card-title text-center mb-4">Country Information</h4>

                <dl class="row">
                    <dt class="col-sm-4">Country Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                </dl>

                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg px-5">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
