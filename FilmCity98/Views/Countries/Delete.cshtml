@model FilmCity98.Models.Country

@{
    ViewData["Title"] = "Delete Country";
}

<h1 class="text-center my-4 text-danger">Delete Country</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="card-title text-center mb-4 text-warning">Are you sure you want to delete this country?</h4>

                <dl class="row">
                    <dt class="col-sm-4">Country Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger btn-lg px-5">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
