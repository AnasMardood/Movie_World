@model FilmCity98.Models.Director

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Edit Director</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h4 class="card-title text-center mb-4">Director Details</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="DirectorId" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label font-weight-bold"></label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter Director Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label font-weight-bold"></label>
                        <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg" placeholder="Enter Director Brith" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label font-weight-bold"></label>
                        <input asp-for="Bio" class="form-control form-control-lg" placeholder="Enter Bio" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" value="Save" class="btn btn-primary btn-lg px-5">Save</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
