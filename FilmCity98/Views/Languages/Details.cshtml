@model FilmCity98.Models.Language

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Language Details</h1>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4 class="card-title text-center mb-4">Language Information</h4>

                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.LanguageId)</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-4">Country Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                </dl>

                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
