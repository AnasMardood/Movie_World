@model IEnumerable<FilmCity98.Models.Producer>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
<div class="card shadow-lg border-0 mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="card-title mb-0 font-weight-bold">Producers List</h2>
            <a class="btn btn-primary" href="@Url.Action("Create", "Producers")">
                <i class="bi bi-plus-lg me-2"></i>Add New Producer
            </a>
        </div>

            <form method="get" action="@Url.Action("Index", "Producers")" class="mb-4">
            <div class="input-group shadow-sm">
                <input type="text"
                       name="searchTitle"
                       class="form-control border-end-0"
                       placeholder="Search by Name"
                       value="@ViewBag.SearchTerm">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-search me-2"></i>Search
                </button>
            </div>
        </form>
    </div>
</div>


    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr class="bg-primary bg-gradient text-white">
                        <th class="px-4 py-3">Producer ID</th>
                        <th class="px-4 py-3">Name</th>
                        <th class="px-4 py-3">Date of Birth</th>
                        <th class="px-4 py-3">Bio</th>
                        <th class="px-4 py-3" style="width: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="px-4 py-3">@item.ProducerId</td>
                            <td class="px-4 py-3">@item.Name</td>
                            <td class="px-4 py-3">@item.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td class="px-4 py-3">@item.Bio</td>
                            <td class="px-4 py-3">
                                <div class="dropdown">
                                    <button class="btn btn-light btn-sm dropdown-toggle border shadow-sm"
                                            type="button"
                                            id="actionMenuButton"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu shadow-sm" aria-labelledby="actionMenuButton">
                                        <li>
                                            <a class="dropdown-item py-2 px-4"
                                               href="@Url.Action("Edit", "Producers", new { id = item.ProducerId })">
                                                <i class="bi bi-pencil-square me-2"></i>Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item py-2 px-4 text-danger"
                                               href="@Url.Action("Delete", "Producers", new { id = item.ProducerId })">
                                                <i class="bi bi-trash me-2"></i>Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* تحسين مظهر الجدول */
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
    }

        .table th {
            font-weight: 600;
            border: none;
        }

        .table td {
            vertical-align: middle;
            border-color: #f0f0f0;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

    /* تحسين مظهر القائمة المنسدلة */
    .dropdown-menu {
        border: none;
        border-radius: 8px;
        min-width: 150px;
    }

    .dropdown-item {
        transition: background-color 0.2s;
    }

        .dropdown-item:hover {
            background-color: #f8f9fa;
        }

    /* تحسين مظهر الأزرار */
    .btn-light {
        background-color: #ffffff;
        border-color: #e0e0e0;
    }

        .btn-light:hover {
            background-color: #f8f9fa;
            border-color: #d0d0d0;
        }
</style>